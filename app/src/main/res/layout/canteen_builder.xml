<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp"
    android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name : "
        android:textSize="20dp"
        android:padding="10dp"
       android:id="@+id/canteen_builder_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number : "
        android:padding="10dp"
        android:textSize="20dp"
        android:id="@+id/canteen_builder_phone_number"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Balance : Rs. "
        android:padding="10dp"
        android:textSize="20dp"
        android:id="@+id/canteen_builder_balance"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Cost : Rs. "
        android:padding="10dp"
        android:textSize="20dp"
        android:id="@+id/canteen_builder_cost"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Button_Background"
        android:padding="10dp"
        android:text="Do you want to continue?"
        android:textColor="@color/Button_Text"
        android:textStyle="bold"
        android:id="@+id/canteen_builder_button"/>
</LinearLayout>